<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root type="javafx.scene.layout.AnchorPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <children>
       <VBox id="VBox" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <Label text="Name" underline="true">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Label>
            <TextField fx:id="nameInput" maxWidth="170.0" promptText="Name" />
            <Label text="Atttributes" underline="true">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Label>
            <TableView fx:id="table" prefHeight="200.0">
              <columns>
                 <TableColumn fx:id="attributeColumn" editable="false" maxWidth="500.0" minWidth="100.0" prefWidth="100.0" text="Attribute" />
                 <TableColumn fx:id="valueColumn" maxWidth="500.0" minWidth="100.0" prefWidth="100.0" text="Value" />
                 <TableColumn fx:id="unitsColumn" editable="false" maxWidth="150.0" minWidth="75.0" prefWidth="75.0" sortable="false" text="Units" />
              </columns>
              <columnResizePolicy>
                 <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
              </columnResizePolicy>
            </TableView>
            <ComboBox fx:id="selectAttribute" prefWidth="170.0" promptText="Select Attribute" />
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <TextField fx:id="attributeInput" prefWidth="170.0" promptText="Value" />
                  <Label fx:id="attributeUnits" text="-" wrapText="true" />
               </children>
            </HBox>
            <HBox spacing="10.0">
               <children>
                  <Button fx:id="buttonClearAttribute" mnemonicParsing="false" text="Clear Attribute" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
         </children>
       </VBox>
    </children>
</fx:root>
